{{!-- demo/app/templates/index.hbs --}}
{{outlet}}
<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-8 text-center">
      <h1 class="display-4 mb-3">{{this.title}}</h1>
      <h2 class="h4 text-muted mb-4">{{this.subtitle}}</h2>
      <p class="lead mb-5">{{this.description}}</p>
      <div class="mb-4 d-flex justify-content-center gap-3">
        <LinkTo @route="new" class="btn btn-warning btn-lg shadow-sm">
          <i class="bi bi-person-plus-fill me-2"></i>
          Add New Contact
        </LinkTo>
        <LinkTo @route="dashboard" class="btn btn-info btn-lg shadow-sm">
          <i class="bi bi-speedometer2 me-2"></i>
          Dashboard
        </LinkTo>
        <LinkTo @route="contacts" class="btn btn-success btn-lg shadow-sm">
          <i class="bi bi-people-fill me-2"></i>
          View Contacts
        </LinkTo>
      </div>
    </div>
  </div>
</div>
